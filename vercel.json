{
  "buildCommand": "cd frontend && npm install && CI=false PUBLIC_URL=/app npm run build && cd .. && mkdir -p dist && mkdir -p dist/app && cp -r frontend/build/* dist/app/ && cp -r landing/* dist/",
  "outputDirectory": "dist",
  "installCommand": "echo 'skip root install'",
  "framework": null,
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://backend-production-76f0e.up.railway.app/api/:path*" },
    { "source": "/services/(.*)", "destination": "/services/$1.html" },
    { "source": "/blog/(.*)", "destination": "/blog/$1.html" },
    { "source": "/guides/(.*)", "destination": "/guides/$1.html" },
    { "source": "/experts/(.*)", "destination": "/experts/$1.html" },
    { "source": "/problems/(.*)", "destination": "/problems/$1.html" },
    { "source": "/login", "destination": "/app/index.html" },
    { "source": "/signup", "destination": "/app/index.html" },
    { "source": "/dashboard/:path*", "destination": "/app/index.html" },
    { "source": "/settings/:path*", "destination": "/app/index.html" },
    { "source": "/assessments/:path*", "destination": "/app/index.html" },
    { "source": "/join/:path*", "destination": "/app/index.html" },
    { "source": "/admin/:path*", "destination": "/app/index.html" },
    { "source": "/reset-password/:path*", "destination": "/app/index.html" },
    { "source": "/daily-log", "destination": "/app/index.html" },
    { "source": "/gratitude", "destination": "/app/index.html" },
    { "source": "/goals", "destination": "/app/index.html" },
    { "source": "/videos", "destination": "/app/index.html" },
    { "source": "/reports/:path*", "destination": "/app/index.html" },
    { "source": "/partner/:path*", "destination": "/app/index.html" },
    { "source": "/app/:path*", "destination": "/app/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" }
      ]
    }
  ]
}
