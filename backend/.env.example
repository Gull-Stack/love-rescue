# Database
DATABASE_URL="postgresql://user:password@localhost:5432/marriage_rescue_db?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV="development"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# Stripe (REQUIRED for payments)
# Get keys from https://dashboard.stripe.com/apikeys
# Use sk_live_... and pk_live_... for production!
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_PRICE_ID="price_..."
STRIPE_ANNUAL_PRICE_ID="price_..."

# Email (SendGrid or Nodemailer SMTP)
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT=587
SMTP_SECURE="false"
SMTP_USER="apikey"
SMTP_PASS="your-sendgrid-api-key"
# Alternative: use SENDGRID_API_KEY directly
# SENDGRID_API_KEY="your-sendgrid-api-key"
EMAIL_FROM="noreply@loverescue.app"
EMAIL_FROM_NAME="Love Rescue"

# Redis (for account lockout, rate limiting)
REDIS_URL="redis://localhost:6379"

# Google Calendar OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3001/api/calendar/callback"

# WebAuthn
WEBAUTHN_RP_NAME="Love Rescue"
WEBAUTHN_RP_ID="localhost"
WEBAUTHN_ORIGIN="http://localhost:3000"

# Encryption (for sensitive data)
ENCRYPTION_KEY="32-character-encryption-key-here"

# Google Service Account (for mediated meetings calendar)
GOOGLE_SERVICE_ACCOUNT_EMAIL="your-service-account@project.iam.gserviceaccount.com"
GOOGLE_SERVICE_ACCOUNT_KEY="your-service-account-private-key"

# Stripe Premium Tier
STRIPE_PREMIUM_PRICE_ID="price_..."

# Push Notifications (VAPID)
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_SUBJECT="mailto:support@loverescue.app"

# Cron job authentication
CRON_SECRET="your-secure-cron-secret"

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS="http://localhost:3000,https://loverescue.app"
